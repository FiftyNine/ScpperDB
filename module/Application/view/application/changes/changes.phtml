function printInfoLabel($data)
{
    foreach ($data['header'] as $name => $number) {
        echo "<h3>$number $name</h3>";
    }
    if (count($data['list']) > 0) {
        echo '<hr>';
        echo '<ul class="list-unstyled">';
        foreach ($data['list'] as $name => $number) {
            echo "<li>$number $name</li>";
        }
        echo '</ul>';    
    }
}

