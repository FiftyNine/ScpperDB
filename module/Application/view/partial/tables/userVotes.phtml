<?php 
$row = $this->row;
switch($this->column->getName()) {
    case '#':
        echo $this->index;
        break;
    case 'Page':
        echo $this->partial('partial/page.phtml', array('page' => $row->getPage(), 'link' => true));
        break;
    case 'Authors':
        echo $this->partial('partial/authors.phtml', ['authors' => $row->getPage()->getAuthors()]);
        break;
    case 'Vote':
        if ($row->getValue() > 0) {echo '+';} else {echo '-';}
        break;
    case 'Date':
        echo $row->getDateTime()->format('Y-m-d');
        break;
    default:;    
}
?> 