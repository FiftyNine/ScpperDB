<?php 
$row = $this->row;
switch($this->column->getName()) {
    case '#':
        echo $this->index;
        break;
    case 'User':
        echo $this->partial('partial/user.phtml', array('user' => $row->getUser()));
        break;
    case 'Comment':
        echo $this->escapeHtml($row->getComments());
        break;
    case 'Time':
        echo $row->getDateTime()->format('Y-m-d H:i');
        break;
    default:;    
}
?>