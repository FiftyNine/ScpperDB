<?php 
    $table = $this->table;
    $col = $this->column; 
    $index = $this->index;
    $level = $this->level;
    $values = $this->values;
    $cols = $col->getSubColumns();
    $classes = ['responsive-table-cell', $this->prefix];
    if (!$cols->getCount()) {
        $classes[] = 'responsive-table-cell-data';
    }
?>
<div class="<?php echo implode($classes, ' ') ?>">    
    <?php if ($cols->getCount()): ?>
    <div class="responsive-table-column-group">
        <?php echo $this->partial('partial/tables/responsive/cells.phtml', [
            'table' => $table, 
            'columns' => $cols,
            'index' => $this->index,
            'values' => $this->values,
            'prefix' => $this->prefix,
            'level' => $level+1,
            'data' => $this->data]);
        ?>
    </div>
    <?php else: ?>
        <div class="responsive-table-value responsive-table-value-default">
        <?php
            echo $this->partial(
                $table->getBodyView(), 
                [
                    'index' => $index,
                    'column' => $col,
                    'row' => $values,                            
                    'data' => $this->data,
                    'collapsed' => false
                ]
            );          
        ?>
        </div>
        <div class="responsive-table-value responsive-table-value-collapsed">
        <?php
            echo $this->partial(
                $table->getBodyView(), 
                [
                    'index' => $index,
                    'column' => $col,
                    'row' => $values,                            
                    'data' => $this->data,
                    'collapsed' => true
                ]
            );          
        ?>
        </div>
    <?php endif; ?>
</div>

